{
  "ConnectionStrings": {
    "MoongladeDatabase": "{PROD-APPSERVICE-ENV-VARIABLE}"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "{PROD-APPSERVICE-ENV-VARIABLE}",
    "TenantId": "{PROD-APPSERVICE-ENV-VARIABLE}",
    "ClientId": "{PROD-APPSERVICE-ENV-VARIABLE}",
    "CallbackPath": "/signin-oidc"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information"
    }
  },
  "Encryption": {
    "Key": "{PROD-APPSERVICE-ENV-VARIABLE}",
    "IV": "{PROD-APPSERVICE-ENV-VARIABLE}"
  },
  "ImageStorage": {
    "Provider": "AzureStorageImageProvider",
    "AzureStorageSettings": {
      "ConnectionString": "{PROD-APPSERVICE-ENV-VARIABLE}",
      "ContainerName": "{PROD-APPSERVICE-ENV-VARIABLE}"
    },
    "FileSystemSettings": {
      "Path": "${basedir}\\UploadedImages"
    }
  },
  "AppSettings": {
    "CaptchaSettings": {
      "ImageWidth": 100,
      "ImageHeight": 36
    },
    "TimeZone": 8,
    "HotTagAmount": 10,
    "PostListPageSize": 10,
    "PostSummaryWords": 400,
    "ImageCacheSlidingExpirationMinutes": 60,
    "EnableImageLazyLoad": true,
    "UsePictureInsteadOfNotFoundResult": true,
    "EnablePingBackReceive": true,
    "EnablePingBackSend": true,
    "EnableHarmonizor": true,
    "EnableReward": true,
    "RecentCommentsListSize": 5,
    "EnforceHttps": true
  },
  "RobotsTxt": {
    "Sections": [
      {
        "Comment": "Allow Googlebot",
        "UserAgent": "Googlebot",
        "Rules": [
          {
            "Key": "Allow",
            "Value": "/"
          }
        ]
      },
      {
        "Comment": "Disallow Baidu",
        "UserAgent": "Baiduspider",
        "Rules": [
          {
            "Key": "Disallow",
            "Value": "/"
          }
        ]
      },
      {
        "Comment": "General",
        "UserAgent": "*",
        "Rules": [
          {
            "Key": "Disallow",
            "Value": "/errorpages/"
          }
        ]
      }
    ],
    "SitemapUrls": []
  },
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "InstrumentationKey": "{PROD-APPSERVICE-ENV-VARIABLE}"
  }
}