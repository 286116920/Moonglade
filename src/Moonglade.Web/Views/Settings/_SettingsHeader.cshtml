@{
    string currentAction = ViewContext.RouteData?.Values["action"]?.ToString();
}

<h3>
    <a href="https://portal.azure.com" class="btn btn-sm btn-light float-right" target="_blank">More App Settings in Azure</a>

    Settings
</h3>
<hr />

<ul class="nav nav-tabs">
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "General" ? "active" : null)" asp-controller="Settings" asp-action="General">General</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "EmailSettings" ? "active" : null)" asp-controller="Settings" asp-action="EmailSettings">Email &amp; Notifications</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "FeedSettings" ? "active" : null)" asp-controller="Settings" asp-action="FeedSettings">RSS/Atom Feed</a>
    </li>
    <li role="presentation" class="nav-item nav-item-non-margin">
        <a class="nav-link @(currentAction == "ManageFriendLinks" ? "active" : null)" asp-controller="Settings" asp-action="ManageFriendLinks">Friend Links</a>
    </li>
</ul>
<div class="mb-3"></div>