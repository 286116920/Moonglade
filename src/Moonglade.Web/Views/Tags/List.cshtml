@using Microsoft.Extensions.Options
@using Moonglade.Core
@using Moonglade.Model.Settings

@inject IOptions<AppSettings> Settings
@model IReadOnlyList<Moonglade.Model.PostListItem>

@section head{
    <style>
        #keyword {
            width: 280px;
        }
    </style>
}

@section scripts{
    <script>
        $(function () {
            $("#keyword").keyup(function () {
                $(".taglist tr").hide().filter(":contains('" + ($(this).val()) + "')").show();
            }).keyup();
        });
    </script>
}

<h3>
    @ViewBag.TitlePrefix
</h3>
<hr />
@if (Model.Count == 0)
{
    <div class="alert alert-warning">
        No Posts
    </div>
}
else
{
    <div class="form-group d-none d-md-block">
        <input type="text" id="keyword" class="form-control" placeholder="Filter" />
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Published
                </th>
            </tr>
        </thead>
        <tbody class="taglist">
            @foreach (var item in Model.OrderByDescending(p => p.PubDateUtc))
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Slug"
                           asp-route-year="@item.PubDateUtc.Year"
                           asp-route-month="@item.PubDateUtc.Month"
                           asp-route-day="@item.PubDateUtc.Day"
                           asp-route-slug="@item.Slug">
                            @item.Title
                        </a>
                    </td>
                    <td>
                        @Utils.UtcToZoneTime(item.PubDateUtc, Settings.Value.TimeZone).ToString("yyyy-MM-dd")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
